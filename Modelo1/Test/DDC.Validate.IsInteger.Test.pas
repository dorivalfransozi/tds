interface

uses
  TestFramework,
  DDC.Validate,
  DDC.Validate.CustomAttribute,
  System.Rtti,
  DDC.Validate.IsInteger;

type
  // Test methods for class TIsInteger

  TestTIsInteger = class(TTestCase)
  strict private
    FIsInteger: TIsInteger;
  public
    const
    COLUMN_NAME: String = 'MyProp';
  public
    procedure SetUp; override;
    procedure TearDown; override;
  published
    procedure GetErrorMessage;
    procedure IsValidString;
    procedure IsValidInteger;
    procedure IsValidCurrency;
  end;

implementation

uses
  System.SysUtils,
  DDC.Validator.ResourceStrings;



procedure TestTIsInteger.SetUp;
begin
  FIsInteger := TIsInteger.Create(COLUMN_NAME);
end;



procedure TestTIsInteger.TearDown;
begin
  FIsInteger.Free;
  FIsInteger := nil;
end;



procedure TestTIsInteger.GetErrorMessage;
begin
  CheckTrue(FIsInteger.GetErrorMessage = Format(TResourceStringsValidator.RSValidation_IsInteger, [COLUMN_NAME]),
    'Erro ao formatar mensagem');
end;



procedure TestTIsInteger.IsValidCurrency;
var
  AValue: TValue;
begin
  AValue := 0123.4;
  CheckFalse(FIsInteger.isValid(AValue), 'Não é um número inteiro: ' + AValue.ToString);
end;



procedure TestTIsInteger.IsValidInteger;
var
  AValue: TValue;
begin
  AValue := 01234;
  CheckTrue(FIsInteger.isValid(AValue), 'Erro ao validar o número: ' + AValue.ToString);
end;



procedure TestTIsInteger.IsValidString;
var
  AValue: TValue;
begin
  AValue := 'abcde';
  CheckFalse(FIsInteger.isValid(AValue), 'Não é um número inteiro: ' + AValue.ToString);
end;

initialization

// Register any test cases with the test runner
RegisterTest(TestTIsInteger.Suite);

end.
